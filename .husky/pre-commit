(
  echo "${red}[Prettier Check Failed]${reset} Your code styling looks disgusting. ğŸ¤¢ğŸ¤®ğŸ¤¢ğŸ¤®
    1. Run ${cyan}${bold}npm run format${reset} or ${cyan}${bold}yarn format${reset} to fix it,
    2. Add changes and try commit again."
  false;
)
echo "${green}[Prettier Check OK]${reset}"

# Check Next ESLint
npm run lint ||
(
  echo "${red}[ESLint Check Failed]${reset} Get that weak shit out of here! ğŸ˜¤ğŸ’©âŒğŸ‘
    Make the changes required above and try again."
  false; 
)
echo "${green}[ESLint Check OK]${reset}"

# Check tsconfig standards
npm run check-types ||
(
  echo "${red}[Type Check Failed]${reset} Are you seriously trying to write that? ğŸ¤¡ğŸ˜‚âŒğŸ¤¡
    Make the changes required above and try again."
  false;
)
echo "${green}[Type Check OK]${reset}"

# Now we can commit
echo "${green}[All Check SUCCESS]${reset} You're doing great, Babe. âœ…ğŸ‘ğŸ‰âœ…
â¤ï¸ I am committing this now â¤ï¸\n"
