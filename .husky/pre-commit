#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

red=`tput setaf 1`
green=`tput setaf 2`
yellow=`tput setaf 3`
blue=`tput setaf 4`
magenta=`tput setaf 5`
cyan=`tput setaf 6`
bold=`tput bold`
reset=`tput sgr0`

echo "ğŸ—ï¸ğŸ‘·ğŸ”¦ğŸ” Styling, testing your code before committing ğŸ—ï¸ğŸ‘·ğŸ”¦ğŸ”"

